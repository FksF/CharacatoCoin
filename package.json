{
  "name": "characatocoin",
  "version": "1.0.0",
  "description": "Characato Coin - Una criptomoneda completa con staking y governance",
  "main": "index.js",
  "scripts": {
    "compile": "npx hardhat compile",
    "test": "npx hardhat test",
    "test:coverage": "npx hardhat coverage",
    "deploy:localhost": "npx hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "npx hardhat run scripts/deploy-testnet.js --network sepolia",
    "deploy:mainnet": "npx hardhat run scripts/deploy-testnet.js --network mainnet",
    "node": "npx hardhat node",
    "clean": "npx hardhat clean",
    "size": "npx hardhat size-contracts",
    "verify:sepolia": "npx hardhat verify --network sepolia",
    "verify:mainnet": "npx hardhat verify --network mainnet",
    "query:sepolia": "npx hardhat run scripts/query-contracts.js --network sepolia",
    "query:localhost": "npx hardhat run scripts/query-contracts.js --network localhost",
    "query:mainnet": "npx hardhat run scripts/query-contracts.js --network mainnet",
    "demo:sepolia": "npx hardhat run scripts/interactive-demo.js --network sepolia",
    "gas-report": "REPORT_GAS=true npx hardhat test",
    "frontend:install": "cd frontend && npm install",
    "frontend:serve": "cd frontend && npm start",
    "frontend:build": "cd frontend && npm run build",
    "dev": "npm run node",
    "start": "npm run deploy:localhost",
    "demo:start": "./scripts/start-demo.sh",
    "demo:stop": "./scripts/stop-demo.sh",
    "demo:logs:node": "tail -f logs/hardhat-node.log",
    "demo:logs:frontend": "tail -f logs/frontend.log",
    "setup": "npm install && cd frontend && npm install && cd ..",
    "audit": "npm audit && cd frontend && npm audit",
    "pre-deploy": "npm test && npm run compile"
  },
  "keywords": [
    "blockchain",
    "cryptocurrency",
    "ethereum",
    "smart-contracts",
    "defi",
    "staking",
    "erc20"
  ],
  "author": "Characato Coin Development Team",
  "license": "MIT",
  "devDependencies": {
    "@nomicfoundation/hardhat-ethers": "^3.1.0",
    "@nomicfoundation/hardhat-toolbox": "^5.0.0",
    "@openzeppelin/contracts": "^5.4.0",
    "dotenv": "^17.2.2",
    "ethers": "^6.15.0",
    "hardhat": "^2.26.3",
    "solidity-coverage": "^0.8.16"
  }
}
